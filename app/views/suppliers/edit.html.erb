<% provide :c_active, "supplier" %>
<% provide :pre_title, "添加供应商" %>
<div class="container" style="padding-top:70px;">
	<div class="row">
		<div class="col-md-12">
			<ul class="breadcrumb">
				<li><a href="/">主页</a></li>
				<li><a href="<%= suppliers_path %>">供应商管理</a></li>
				<li class="active">修改供应商</li>
			</ul>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12 col-md-12 center-block" style="float: none;">
			<% if @supplier && @supplier.errors.any? %>
				<div id="error-info" class="alert alert-danger">
					<div class="form-error">
						<span class="form-error-field"><%= @supplier.errors.full_messages[0] %></span>
						<span class="glyphicon glyphicon-info-sign icon"></span>
					</div>
				</div>
			<% end %>
			<div class="panel panel-primary">
				<div class="panel-heading"><h3 class="panel-title">添加供应商</h3></div>
				<div class="panel-body">
					<%= form_for @supplier, url: suppliers_path do |u| %>
						<div id="error-info" class="alert alert-danger" style="display: none;"></div>
						<div class="form-group">
							<label>产品名称:</label><br>
							<%= u.text_field  :product_name, placeholder: "产品名称", class: "form-control" %>
						</div>
						<div class="form-group">
							<label>供应商名称:</label><br>
							<%= u.text_field :supplier_name, placeholder: "供应商名称", class: "form-control" %>
						</div>
						<div class="form-group">
							<label>联系人:</label><br>
							<%= u.text_field :contact, placeholder: "联系人", class: "form-control" %>
						</div>
						<div class="form-group">
							<label>联系方式:</label><br>
							<%= u.text_field :contact_information, placeholder: "联系方式", class: "form-control" %>
						</div>
						<div class="form-group">
							<label>备注:</label><br>
							<%= u.text_field :note, placeholder: "备注", class: "form-control" %>
						</div>
						<%= u.submit  "确定修改", class: "btn btn-primary btn-block" %>
					<% end %>
					<br/><a href="<%= suppliers_path %>">>>返回供应商列表</a>
				</div>
			</div>
		</div>
	</div>
</div>
