<% provide :c_active, "set" %>
<% provide :pre_title, "系统设置" %>
<div class="container" style="padding-top:70px;">
	<div class="col-sm-12 col-md-10 center-block" style="float: none;">
		<div class="panel panel-primary">
			<div class="panel-heading"><h3 class="panel-title">系统设置</h3></div>
			<div class="panel-body">

				<%= form_for @siteinfo, url: site_path do |f| %>
					
					<% if @siteinfo && @siteinfo.errors.any? %>
						<div class="alert error-info"><%= @siteinfo.errors.full_messages[0] %></div>
					<% end %>

					<div class="form-group">
						<label>网站标题:</label><br>
						<%= f.text_field  :title, placeholder: "网站标题", class: "form-control" %>
					</div>
					<div class="form-group">
						<label>邮件接收列表:</label><br>
						<%= f.text_field :emailrecive, placeholder: "填入想接收邮件的邮箱", class: "form-control" %>
					</div>

					<%= f.submit  "确定修改", class: "btn btn-primary btn-block" %>
				<% end %>


			</div>
		</div>
	</div>
</div>