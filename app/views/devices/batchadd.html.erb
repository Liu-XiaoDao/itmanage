<% provide :c_active, "asset" %>
<div class="container" style="padding-top:70px;">
	<div class="col-sm-12 col-md-10 center-block" style="float: none;">
		<div class="panel panel-primary">
			<div class="panel-heading"><h3 class="panel-title">批量添加设备</h3></div>
			<div class="panel-body">
				<%= form_tag  devices_batchcreate_path do %>
					<div id="error-info" class="alert alert-danger" style="display: none;"></div>
					<div class="form-group">
			          	<label for="name">设备类型:</label>
			          	<select class="form-control" name=device[decategory_id]>
			            	<% @decategorys.each do |decategory| %>
			              		<option value="<%= decategory.id %>"><%= decategory.name %></option>
			            	<% end %>
			          	</select>
			        </div>
					<div class="form-group">
						<label>设备名:</label><br>
						<input type="text" class="form-control" name="device[name]" value="" placeholder="设备名">
					</div>
			        <div class="form-group">
						<label for="time" class="control-label">出厂时间:&nbsp;</label>
				        <div class="input-group controls input-append date form_datetime" data-date="1979-09-16T05:25:07Z" data-date-format="dd MM yyyy - HH:ii p" data-link-field="dtp_input1">
				          <input type="text" class="form-control" size="16" readonly name="device[release_date]">
				          <span class="input-group-addon"><i class="glyphicon glyphicon-remove"></i></span>
				          <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
				        </div>
				        <script type="text/javascript">
				          $('.form_datetime').datetimepicker({
				              format: 'yyyy/mm/dd',
				              language: 'zh-CN',
				              weekStart: 1,
				              todayBtn:  1,
				              autoclose: 1,
				              todayHighlight: 1,
				              startView: 2,
				              forceParse: 0,
				              showMeridian: 1
				          });
				        </script>
			        </div>
			        <div class="form-group">
						<label>设备数量:</label><br>
						<input type="number" class="form-control" name="device[count]" value="5" required>
					</div>


					<%= submit_tag "确定添加", class: "btn btn-primary btn-block" %>
				<% end %>
				<br/><a href="<%= devices_path %>">>>返回设备列表</a>
			</div>
		</div>
	</div>
</div>



