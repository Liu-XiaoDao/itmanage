<!DOCTYPE html>
<html>
  <%= render 'shared/page_head' %>
  <body>
    <%= render 'shared/flash_messages_top' %>

    <div class="login">
      <!-- 语系切换 -->
      <%= content_tag :div, link_to_locale(request.path), class: "switch-lang" %>
      <div class="clearfix"></div>

      <div class="container">
        <div class="col-md-3 col-center-block login-box">
          <div class="logo">
            <%= link_to image_tag("logo.png", alt:"Milog", class: "img-responsive center-block"), "/" %>
          </div>
          
          <h6></h6>
          
          <!-- 标签 -->
          <ul class="tab">
            <%= content_tag :li, link_to_login('signin', 'under-line', yield(:login)), class: "signin" %>
            <%= content_tag :li, link_to_login('signup', 'under-line', yield(:login)), class: "signup" %>
          </ul>

          <!-- 注册表单 -->
          <div id="signup-box" <%= show_or_hidden_login_div 'signup', yield(:login) %> >
            <div class="login-body">
              <%= render "shared/signup_form" %>
            </div>
          </div>

          <!-- 登录表单 -->
          <div id="signin-box" <%= show_or_hidden_login_div 'signin', yield(:login) %> >
            <div class="login-body">
              <%= render "shared/signin_form" %>
            </div>
          </div>

        </div>
      </div>
    </div>
    
    <%- debug(params) if Rails.env.development? %>
    <%= javascript_include_tag 'login' %>
  </body>
</html>