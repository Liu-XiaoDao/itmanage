<% provide :c_active, "department" %>
<div class="container" style="padding-top:70px;">
<div class="col-sm-12 col-md-10 center-block" style="float: none;">

	<div class="panel panel-primary">
		<div class="panel-heading"><h3 class="panel-title">添加部门</h3></div>
		<div class="panel-body">
			

			<% if @department && @department.errors.any? %>
				<div class="alert alert-info"><%= @department.errors.full_messages[0] %></div>
			<% end %>


			<%= simple_form_for @department, url: departments_path do |f| %>
				<div class="form-group">
					<label>部门名称:</label><br>
					<%= f.input_field :department_name, placeholder: "部门名称", class: "form-control" %>
				</div>
				<div class="form-group">
					<label>部门经理:</label><br>
					<select class="form-control" name="department[manager_name]">
						<% @users.each do |user| %>
							<option value="<%= user.username %>"><%= user.username %></option>
		    			<% end %>
					</select>
				</div>
				<%= f.button :submit, "确定添加", class: "btn btn-primary btn-block" %>
			<% end %>
			<br/><a href="<%= departments_path %>">>>返回部门列表</a>
		</div>
	</div>


</div>
</div>



